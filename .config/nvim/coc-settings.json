{
  "colors.filetypes": ["*"],
  "coc.preferences.formatOnSaveFiletypes": [
    "reason",
    "css",
    "json",
    "js",
    "scss",
    "typescript",
    "typescriptreact"
  ],
  "codeLens.enable": true,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.virtualText": true,
  "eslint.autoFixOnSave": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.root.customRules": {
    "vcs": {
      "patterns": [".git", ".hg", ".projections.json"]
    },
    "vcs-r": {
      "patterns": [".git", ".hg", ".projections.json"],
      "bottomUp": true
    }
  },
  "explorer.root.strategies": ["workspace", "custom:vcs", "custom:vcs-r"],
  "suggest.autoTrigger": "always",
  "solargraph.autoformat": true,
  "solargraph.definitions": true,
  "solargraph.diagnostics": true,
  "solargraph.folding": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "solargraph.useBundler": true,
  "solargraph.references": true,
  "explorer.floating.border.enable": true,
  "explorer.floating.border.chars": [" ", " ", " ", " ", " ", " ", " ", " "],
  "yank.highlight.enable": false,
  "yank.priority": 10
}
